{
  "name": "@nasa-gcn/architect-plugin-tracing",
  "description": "Architect plugin for tracing Lambdas with OpenTelemetry and shipping results to AWS X-Ray",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "github:nasa-gcn/architect-plugin-tracing"
  },
  "license": "Apache-2.0",
  "contributors": [
    {
      "name": "Leo Singer",
      "email": "leo.p.singer@nasa.gov"
    }
  ],
  "type": "module",
  "files": [
    "index.js"
  ],
  "scripts": {
    "prepare:husky": "husky",
    "prepare:esbuild": "esbuild index.ts --bundle --packages=external --outfile=index.js --platform=node --format=esm --tree-shaking=true",
    "prepare": "run-p prepare:*"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@nasa-gcn/eslint-config-gitignore": "^0.0.2",
    "@tsconfig/node20": "^20.1.5",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.0.1",
    "husky": "^9.1.0",
    "lint-staged": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "es2019": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "@nasa-gcn/eslint-config-gitignore",
      "prettier"
    ],
    "overrides": [
      {
        "files": "*.ts",
        "extends": [
          "plugin:@typescript-eslint/recommended",
          "@nasa-gcn/eslint-config-gitignore"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
          "@typescript-eslint"
        ]
      }
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "lint-staged": {
    "*.(json|md|ts)": "prettier --write",
    "*.ts": "eslint"
  }
}
